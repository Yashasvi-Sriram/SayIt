<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.withjarvis.sayit.Activities.ChatWindow">

    <ScrollView
        android:id="@+id/chat_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/in_sync_stack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/new_messages_stack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/new_message_factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:paddingBottom="5sp"
        android:paddingTop="5sp">

        <EditText
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_toStartOf="@+id/send_message_btn"
            android:background="@drawable/new_message_text_input_bg"
            android:inputType="textMultiLine"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:textColor="#009688" />

        <Button
            android:id="@+id/send_message_btn"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/send_btn_bg"
            android:text="Send"
            android:textColor="#fff" />

    </RelativeLayout>

</RelativeLayout>
